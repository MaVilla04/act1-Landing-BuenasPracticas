---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
interface Props {
  pelicula: CollectionEntry<"peliculas">;
}

const { pelicula } = Astro.props;
const { titulo, director, img, fechaEstreno } = pelicula.data;
---

<article
  class="flex flex-col min-w-44 max-w-3xs p-4 m-2.5 border border-blue-400 rounded-lg hover:shadow-lg"
>
  <Image
    src={img}
    alt="imagen de Pelicula"
    width="200"
    height="200"
    class="mx-auto mb-2 rounded-md"
  />
  <div>
    <h4 class="text-xl font-semibold">{titulo}</h4>
    <p class="font-semibold">Fecha de Estreno:</p>
    <p>{fechaEstreno}</p>
    <p class="font-semibold">Dirigida por:</p>
    <p>{director}</p>
  </div>
</article>
